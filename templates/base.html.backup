<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}WFM{% endblock %}</title>
    
    <!-- Bootstrap CSS with light theme -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Feather Icons -->
    <script src="https://unpkg.com/feather-icons"></script>
    
    <!-- Chart.js for Analytics -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="{{ url_for('static', filename='css/style.css') }}">
    <link rel="stylesheet" href="{{ url_for('static', filename='css/mobile.css') }}">
    <link rel="stylesheet" href="{{ url_for('static', filename='css/light-theme.css') }}">
    
    <!-- Sub-dropdown styles -->
    <style>
        .dropdown-submenu {
            position: relative;
        }
        
        .dropdown-submenu .dropdown-menu {
            top: 0;
            left: 100%;
            margin-top: -1px;
            margin-left: -1px;
            border-radius: 0 6px 6px 6px;
        }
        
        /* Mobile responsive adjustments */
        @media (max-width: 768px) {
            .dropdown {
                position: static !important;
            }
            
            .dropdown-menu {
                position: fixed !important;
                top: auto !important;
                right: 10px !important;
                left: 10px !important;
                width: calc(100vw - 20px) !important;
                max-width: 300px !important;
                margin-left: auto !important;
                margin-right: auto !important;
                transform: none !important;
                z-index: 1050 !important;
            }
            
            .dropdown-submenu {
                position: relative !important;
            }
            
            .dropdown-submenu .dropdown-menu {
                position: static !important;
                float: none !important;
                width: 100% !important;
                margin-top: 0 !important;
                margin-left: 0 !important;
                border: none !important;
                border-radius: 0 !important;
                box-shadow: none !important;
                background-color: #f8f9fa !important;
            }
            
            .dropdown-submenu .dropdown-item {
                padding-left: 2rem !important;
                font-size: 0.9rem !important;
            }
            
            .navbar {
                padding: 0.5rem 1rem !important;
            }
            
            .navbar-brand {
                font-size: 1.1rem !important;
            }
            
            .btn.dropdown-toggle {
                font-size: 0.9rem !important;
                padding: 0.5rem 0.75rem !important;
            }
            
            /* Ensure dropdown shows properly on mobile */
            .dropdown.show .dropdown-menu {
                display: block !important;
            }
        }
        
        /* Extra small screens */
        @media (max-width: 576px) {
            .dropdown-menu {
                right: 5px !important;
                left: 5px !important;
                width: calc(100vw - 10px) !important;
                max-width: none !important;
            }
            
            .navbar-brand {
                font-size: 1rem !important;
            }
            
            .btn.dropdown-toggle {
                font-size: 0.8rem !important;
                padding: 0.4rem 0.6rem !important;
            }
        }
        
        .dropdown-submenu:hover .dropdown-menu {
            display: block;
        }
        
        .dropdown-submenu .dropdown-toggle::after {
            display: block;
            content: " ";
            float: right;
            width: 0;
            height: 0;
            border-color: transparent;
            border-style: solid;
            border-width: 5px 0 5px 5px;
            border-left-color: #ccc;
            margin-top: 5px;
            margin-right: -10px;
        }
        
        .dropdown-submenu .dropdown-toggle[aria-expanded="true"]::after {
            border-left-color: #007bff;
        }
        
        @media (max-width: 767px) {
            .dropdown-submenu .dropdown-menu {
                position: static;
                float: none;
                width: auto;
                margin-top: 0;
                background-color: #f8f9fa;
                border: 0;
                border-radius: 0;
                box-shadow: none;
            }
        }
    </style>
    
    <!-- Mobile optimizations -->
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="default">
    <meta name="theme-color" content="#ffffff">
    
    {% block head %}{% endblock %}
</head>
<body class="d-flex flex-column min-vh-100 bg-light">
    <!-- Navigation -->
    <nav class="navbar navbar-light bg-white shadow-sm">
        <div class="container">
            <a class="navbar-brand" href="{{ url_for('main.index') }}">
                <i data-feather="briefcase" class="me-2"></i>
                WFM
            </a>
            
            <!-- Always show dropdown menu -->
            {% if current_user.is_authenticated %}
            <div class="d-flex align-items-center">
                <!-- Main Menu Dropdown -->
                <div class="dropdown me-3">
                    <button class="btn btn-outline-primary dropdown-toggle" type="button" id="mainMenuDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <i data-feather="menu" class="me-1"></i>
                        Menu
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="mainMenuDropdown">
                        <li><a class="dropdown-item" href="{{ url_for('main.index') }}">
                            <i data-feather="home" class="me-2"></i>
                            Dashboard
                        </a></li>
                        <li><hr class="dropdown-divider"></li>
                        
                        <!-- Personal Section as Sub-dropdown -->
                        <li class="dropdown-submenu">
                            <a class="dropdown-item dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                <i data-feather="user" class="me-2"></i>
                                Personal
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="{{ url_for('time_attendance.my_timecard') }}">
                                    <i data-feather="clock" class="me-2"></i>
                                    My Timecard
                                </a></li>
                                <li><a class="dropdown-item" href="{{ url_for('scheduling.my_schedule') }}">
                                    <i data-feather="calendar" class="me-2"></i>
                                    My Schedule
                                </a></li>
                                <li><a class="dropdown-item" href="{{ url_for('leave_management.my_leave') }}">
                                    <i data-feather="umbrella" class="me-2"></i>
                                    My Leave
                                </a></li>
                                <li><a class="dropdown-item" href="{{ url_for('pulse_survey.pulse_dashboard') }}">
                                    <i data-feather="message-circle" class="me-2"></i>
                                    Team Communication
                                </a></li>
                                <li><a class="dropdown-item" href="{{ url_for('main.reports') }}">
                                    <i data-feather="bar-chart-2" class="me-2"></i>
                                    Reports
                                </a></li>
                            </ul>
                        </li>
                        
                        {% if current_user.has_role('Manager') or current_user.has_role('Admin') or current_user.has_role('Super User') %}
                        <!-- Management Section as Sub-dropdown -->
                        <li class="dropdown-submenu">
                            <a class="dropdown-item dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                <i data-feather="users" class="me-2"></i>
                                Management
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="{{ url_for('time_attendance.team_timecard') }}">
                                    <i data-feather="users" class="me-2"></i>
                                    Team Timecard
                                </a></li>
                                <li><a class="dropdown-item" href="{{ url_for('time_attendance.team_calendar') }}">
                                    <i data-feather="calendar" class="me-2"></i>
                                    Team Calendar View
                                </a></li>
                                <li><a class="dropdown-item" href="{{ url_for('time_attendance.time_exceptions') }}">
                                    <i data-feather="alert-triangle" class="me-2"></i>
                                    Time Exceptions
                                </a></li>
                                <li><a class="dropdown-item" href="{{ url_for('scheduling.manage_schedules') }}">
                                    <i data-feather="calendar" class="me-2"></i>
                                    Manage Schedules
                                </a></li>
                                <li><a class="dropdown-item" href="{{ url_for('scheduling.shift_types') }}">
                                    <i data-feather="clock" class="me-2"></i>
                                    Shift Types
                                </a></li>
                                <li><a class="dropdown-item" href="{{ url_for('ai_scheduling.ai_dashboard') }}">
                                    <i data-feather="cpu" class="me-2"></i>
                                    AI Scheduling
                                </a></li>
                                <li><a class="dropdown-item" href="{{ url_for('ai.ai_dashboard') }}">
                                    <i data-feather="zap" class="me-2"></i>
                                    AI Insights
                                </a></li>
                                <li><a class="dropdown-item" href="{{ url_for('leave_management.team_applications') }}">
                                    <i data-feather="umbrella" class="me-2"></i>
                                    Team Leave Applications
                                </a></li>
                                <li><a class="dropdown-item" href="{{ url_for('leave_management.apply_for_employee') }}">
                                    <i data-feather="user-plus" class="me-2"></i>
                                    Apply Leave for Employee
                                </a></li>
                            </ul>
                        </li>
                        
                        {% endif %}
                        
                        <!-- System Super Admin Section -->
                        {% if current_user.has_role('system_super_admin') %}
                        <li><hr class="dropdown-divider"></li>
                        <li class="dropdown-submenu">
                            <a class="dropdown-item dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                <i data-feather="globe" class="me-2"></i>
                                System Administration
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="{{ url_for('tenant.admin_organization_list') }}">
                                    <i data-feather="building" class="me-2"></i>
                                    Organization Management
                                </a></li>
                                <li><a class="dropdown-item" href="{{ url_for('tenant.admin_create_organization') }}">
                                    <i data-feather="plus" class="me-2"></i>
                                    Create Organization
                                </a></li>
                            </ul>
                        </li>
                        {% endif %}
                        
                        <!-- Organization Management Section -->
                        <li class="dropdown-submenu">
                            <a class="dropdown-item dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                <i data-feather="building" class="me-2"></i>
                                Organization
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="{{ url_for('organization.dashboard') }}">
                                    <i data-feather="activity" class="me-2"></i>
                                    Organization Dashboard
                                </a></li>
                                <li><a class="dropdown-item" href="{{ url_for('organization.companies') }}">
                                    <i data-feather="building" class="me-2"></i>
                                    Company Management
                                </a></li>
                                <li><a class="dropdown-item" href="{{ url_for('employee_import.import_dashboard') }}">
                                    <i data-feather="upload" class="me-2"></i>
                                    Employee Import
                                </a></li>
                                <li><a class="dropdown-item" href="{{ url_for('organization.create_company') }}">
                                    <i data-feather="plus-circle" class="me-2"></i>
                                    Create Company
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                {% if current_user.is_tenant_admin() %}
                                <li><a class="dropdown-item" href="{{ url_for('tenant.tenant_dashboard') }}">
                                    <i data-feather="monitor" class="me-2"></i>
                                    Tenant Dashboard
                                </a></li>
                                <li><a class="dropdown-item" href="{{ url_for('tenant.tenant_settings') }}">
                                    <i data-feather="settings" class="me-2"></i>
                                    Tenant Settings
                                </a></li>
                                <li><a class="dropdown-item" href="{{ url_for('tenant.tenant_users') }}">
                                    <i data-feather="users" class="me-2"></i>
                                    Tenant Users
                                </a></li>
                                {% endif %}
                            </ul>
                        </li>
                        
                        {% if current_user.is_tenant_admin() %}
                        <li><hr class="dropdown-divider"></li>
                        {% endif %}

                        <!-- Super User Administration Section as Sub-dropdown -->
                        {% if current_user.has_role('Super User') %}
                        <li class="dropdown-submenu">
                            <a class="dropdown-item dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                <i data-feather="shield" class="me-2"></i>
                                Administration
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="{{ url_for('auth.user_management') }}">
                                    <i data-feather="users" class="me-2"></i>
                                    User Management
                                </a></li>
                                <li><a class="dropdown-item" href="{{ url_for('time_attendance.admin_dashboard') }}">
                                    <i data-feather="shield" class="me-2"></i>
                                    Time Attendance Admin
                                </a></li>
                                <li><a class="dropdown-item" href="{{ url_for('time_attendance.manual_entry') }}">
                                    <i data-feather="edit" class="me-2"></i>
                                    Manual Time Entry
                                </a></li>
                                <li><a class="dropdown-item" href="{{ url_for('leave_management.manage_leave_types') }}">
                                    <i data-feather="tag" class="me-2"></i>
                                    Leave Types
                                </a></li>
                                <li><a class="dropdown-item" href="{{ url_for('leave_management.manage_leave_balances') }}">
                                    <i data-feather="trending-up" class="me-2"></i>
                                    Leave Balances
                                </a></li>
                                <li><a class="dropdown-item" href="{{ url_for('pay_rules.manage_pay_rules') }}">
                                    <i data-feather="dollar-sign" class="me-2"></i>
                                    Pay Rules Engine
                                </a></li>
                                <li><a class="dropdown-item" href="{{ url_for('pay_rules.calculate_pay') }}">
                                    <i data-feather="credit-card" class="me-2"></i>
                                    Calculate Pay
                                </a></li>
                                <li><a class="dropdown-item" href="{{ url_for('pay_codes.manage_pay_codes') }}">
                                    <i data-feather="tag" class="me-2"></i>
                                    Pay Codes
                                </a></li>
                            </ul>
                        </li>
                        {% endif %}
                        {% endif %}
                    </ul>
                </div>
                
                <!-- User Authentication -->
                <div class="dropdown">
                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="userMenuDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <i data-feather="user" class="me-1"></i>
                        {% if current_user.is_authenticated %}
                            {{ current_user.username }}
                        {% else %}
                            Account
                        {% endif %}
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenuDropdown">
                        {% if current_user.is_authenticated %}
                        <li><a class="dropdown-item" href="{{ url_for('auth.profile') }}">
                            <i data-feather="user" class="me-2"></i>
                            My Profile
                        </a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="{{ url_for('auth.logout') }}">
                            <i data-feather="log-out" class="me-2"></i>
                            Sign Out
                        </a></li>
                        {% else %}
                        <li><a class="dropdown-item" href="{{ url_for('auth.login') }}">
                            <i data-feather="log-in" class="me-2"></i>
                            Sign In
                        </a></li>
                        {% endif %}
                    </ul>
                </div>
                
                <!-- Database Status -->
                <div class="d-flex align-items-center ms-3">
                    <span class="db-status loading" id="db-status"></span>
                    <small class="text-muted ms-2" id="db-status-text">Checking...</small>
                </div>
            </div>
            {% else %}
            <div class="d-flex align-items-center">
                <a class="btn btn-primary" href="{{ url_for('auth.login') }}">
                    <i data-feather="log-in" class="me-1"></i>
                    Sign In
                </a>
            </div>
            {% endif %}
        </div>
        </div>
    </nav>

    <!-- Flash Messages -->
    <div id="flash-messages" class="container mt-3">
        {% with messages = get_flashed_messages(with_categories=true) %}
            {% if messages %}
                {% for category, message in messages %}
                    <div class="alert alert-{{ 'danger' if category == 'error' else category }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}
            {% endif %}
        {% endwith %}
    </div>

    <!-- Main Content -->
    <main class="flex-grow-1">
        {% block content %}{% endblock %}
    </main>

    <!-- Footer -->
    <footer class="footer mt-auto bg-white border-top">
        <div class="container py-4">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="text-dark">WFM - Workforce Management</h5>
                    <p class="text-secondary mb-0">
                        A comprehensive workforce management system with time tracking, 
                        employee scheduling, leave management, and payroll processing.
                    </p>
                </div>
                <div class="col-md-6 text-md-end">
                    <h6 class="text-dark">Key Features</h6>
                    <ul class="list-unstyled text-secondary">
                        <li><i data-feather="check" class="me-1 text-success"></i> Time & Attendance</li>
                        <li><i data-feather="check" class="me-1 text-success"></i> Employee Scheduling</li>
                        <li><i data-feather="check" class="me-1 text-success"></i> Leave Management</li>
                        <li><i data-feather="check" class="me-1 text-success"></i> Payroll Processing</li>
                    </ul>
                </div>
            </div>
            <hr class="my-3">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <small class="text-secondary">
                        &copy; 2024 WFM - Workforce Management System. Built with Flask & Bootstrap.
                    </small>
                </div>
                <div class="col-md-6 text-md-end">
                    <small class="text-secondary">
                        <i data-feather="server" class="me-1"></i>
                        Powered by Flask {{ "2.3+" }} & PostgreSQL
                    </small>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap Bundle JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Custom JavaScript -->
    <script src="{{ url_for('static', filename='js/main.js') }}"></script>
    
    <!-- Initialize Feather Icons -->
    <script>
        feather.replace()
        
        // Global JavaScript Functions for Dashboard Functionality
        
        // Show Profile Modal/Page
        function showProfile() {
            window.location.href = '/auth/profile';
        }
        
        // Quick Actions Functions
        function quickClockIn() {
            clockIn();
        }
        
        function quickClockOut() {
            clockOut();
        }
        
        function viewMySchedule() {
            window.location.href = '/schedules';
        }
        
        function applyForLeave() {
            window.location.href = '/leave-management';
        }
        
        // Toggle Quick Actions View
        function toggleQuickActionsView() {
            const quickActions = document.getElementById('quick-actions-section');
            if (quickActions) {
                quickActions.style.display = quickActions.style.display === 'none' ? 'block' : 'none';
            }
        }
        
        // Navigation Functions
        function navigateToTimeAttendance() {
            window.location.href = '/time-attendance';
        }
        
        function navigateToScheduling() {
            window.location.href = '/schedules';
        }
        
        function navigateToLeaveManagement() {
            window.location.href = '/leave-management';
        }
        
        function navigateToPayroll() {
            window.location.href = '/payroll';
        }
        
        function navigateToReports() {
            window.location.href = '/reports';
        }
        
        // Database Status Check
        function checkDatabaseStatus() {
            const statusElement = document.getElementById('db-status');
            const statusTextElement = document.getElementById('db-status-text');
            
            // Only run if status elements exist on the page
            if (!statusElement || !statusTextElement) return;
            
            fetch('/api/system-info')
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        statusElement.className = 'db-status connected';
                        statusTextElement.textContent = 'Connected';
                    } else {
                        statusElement.className = 'db-status disconnected';
                        statusTextElement.textContent = 'Error';
                    }
                })
                .catch(error => {
                    // Silent fail if status elements don't exist
                    if (statusElement && statusTextElement) {
                        statusElement.className = 'db-status disconnected';
                        statusTextElement.textContent = 'Offline';
                    }
                });
        }
        
        // Global Error Handler
        window.addEventListener('error', function(event) {
            console.log('Global error:', event.error);
        });
        
        // Initialize sub-dropdown functionality
        function initSubDropdowns() {
            // Handle sub-dropdown clicks for mobile
            document.querySelectorAll('.dropdown-submenu .dropdown-toggle').forEach(function(element) {
                element.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    
                    const submenu = this.nextElementSibling;
                    const isVisible = submenu.style.display === 'block';
                    
                    // Hide all other submenus
                    document.querySelectorAll('.dropdown-submenu .dropdown-menu').forEach(function(menu) {
                        menu.style.display = 'none';
                    });
                    
                    // Toggle current submenu
                    if (!isVisible) {
                        submenu.style.display = 'block';
                    }
                });
            });
        }
        
        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            checkDatabaseStatus();
            initSubDropdowns();
            // Check database status every 30 seconds
            setInterval(checkDatabaseStatus, 30000);
        });
    </script>
    
    {% block scripts %}{% endblock %}
</body>
</html>
