# SAGE VIP Payroll Integration Configuration
# Copy this file to .env and update with your actual SAGE VIP credentials

# ======================
# SAGE VIP CONNECTION SETTINGS
# ======================

# SAGE VIP Payroll server base URL
SAGE_VIP_BASE_URL=https://your-sage-vip-server.com

# SAGE VIP API credentials
SAGE_VIP_API_KEY=your_sage_vip_api_key_here
SAGE_VIP_USERNAME=your_sage_username
SAGE_VIP_PASSWORD=your_sage_password

# Company database identifier in SAGE VIP
SAGE_VIP_COMPANY_DB=your_company_database_name

# ======================
# INTEGRATION SETTINGS
# ======================

# Enable/disable SAGE VIP integration
SAGE_VIP_ENABLED=true

# Auto-sync configuration
SAGE_VIP_AUTO_SYNC=true
SAGE_VIP_SYNC_FREQUENCY=daily
SAGE_VIP_SYNC_TIME=02:00

# Sync specific data types
SAGE_VIP_SYNC_EMPLOYEES=true
SAGE_VIP_SYNC_TIMESHEET=true
SAGE_VIP_SYNC_LEAVE=true
SAGE_VIP_SYNC_DEPARTMENTS=false
SAGE_VIP_SYNC_PAY_CODES=false

# ======================
# PERFORMANCE SETTINGS
# ======================

# Connection timeout in seconds
SAGE_VIP_TIMEOUT=30

# Number of retry attempts for failed requests
SAGE_VIP_RETRY_ATTEMPTS=3

# Delay between retries in seconds
SAGE_VIP_RETRY_DELAY=60

# Use exponential backoff for retries
SAGE_VIP_EXPONENTIAL_BACKOFF=true

# Batch size for bulk operations
SAGE_VIP_BATCH_SIZE=100

# ======================
# SYNC HISTORY TRACKING
# ======================

# Last successful sync timestamp (managed automatically)
SAGE_VIP_LAST_SYNC=

# Next scheduled sync time (managed automatically)
SAGE_VIP_NEXT_SYNC=

# ======================
# FIELD MAPPING OVERRIDES
# ======================

# Employee field mappings (JSON format)
SAGE_VIP_EMPLOYEE_FIELD_MAP={"username":"EmployeeNumber","first_name":"FirstName","last_name":"LastName","email":"EmailAddress"}

# Pay code mappings (JSON format)
SAGE_VIP_PAY_CODE_MAP={"REG":"REGULAR","OT":"OVERTIME","DT":"DOUBLETIME","SICK":"SICK_LEAVE"}

# Department mappings (JSON format)
SAGE_VIP_DEPARTMENT_MAP={"Human Resources":"HR","Information Technology":"IT","Finance":"FIN"}

# ======================
# LOGGING AND MONITORING
# ======================

# Enable detailed integration logging
SAGE_VIP_DEBUG_LOGGING=false

# Log file path for SAGE VIP integration
SAGE_VIP_LOG_FILE=/var/log/wfm/sage_vip.log

# Webhook URL for integration status notifications
SAGE_VIP_WEBHOOK_URL=

# Email notifications for sync failures
SAGE_VIP_NOTIFICATION_EMAIL=admin@yourcompany.com

# ======================
# SECURITY SETTINGS
# ======================

# SSL certificate verification
SAGE_VIP_SSL_VERIFY=true

# Client certificate path (if required)
SAGE_VIP_CLIENT_CERT_PATH=

# Client key path (if required)
SAGE_VIP_CLIENT_KEY_PATH=

# ======================
# DATA VALIDATION
# ======================

# Validate employee data before sync
SAGE_VIP_VALIDATE_EMPLOYEES=true

# Validate timesheet data before push
SAGE_VIP_VALIDATE_TIMESHEET=true

# Validate leave data before push
SAGE_VIP_VALIDATE_LEAVE=true

# Skip invalid records instead of failing entire sync
SAGE_VIP_SKIP_INVALID_RECORDS=true